{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run on Kubernetes",
            "type": "cloudcode.kubernetes",
            "request": "launch",
            "skaffoldConfig": "${workspaceFolder}/skaffold.yaml",
            "watch": true,
            "cleanUp": true,
            "imageRegistry": "gcr.io/sanche-testing-project"
        },
        {
            "name": "Debug on Kubernetes (frontend)",
            "type": "cloudcode.kubernetes",
            "request": "attach",
            "language": "Python",
            "debugPort": 3000,
            "localRoot": "${workspaceFolder}/src/frontend",
            "remoteRoot": "/frontend",
            "podSelector": {
                "app": "frontend"
            }
        },
        {
